<section>
    <div class="container-fluid">
        <div class="row mt-4">
            {{#each products}}
            <div class="col-md-3">
                <div class="card" style="width: 18rem;height:30rem">
                    <img style="height: 320px;" src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title" {{this.Name}}</h5>
                            <h4>{{this.Price}}</h4>
                            <p class="card-text">{{this.Offer}}% Offer</p>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>